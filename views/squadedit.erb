<%= erb :'partials/_header' %>
<div class="container-fluid">
<h1>Edit Squad</h1>
<p class="msg-form">Please make your changes below:</p>

<form action="/squads/<%= @squad["squad_id"] %>" method="POST" class="form-horizontal">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
  <label for="name" class="col-sm-2 control-label">Name:</label>
  <div class="col-sm-10">
  <input type="text" name="name" id="name" value="<%= @squad["name"] %>">
  </div></div>
  <div class="form-group">
  <label for="mascot" class="col-sm-2 control-label">Mascot:</label>
  <div class="col-sm-10">
  <input type="text" name="mascot" id="mascot" value="<%= @squad["mascot"] %>">
  <input type="submit" value="Update Squad" class="btn btn-primary">
  </div></div>
</form> 
</div>

<footer>
<form action="/squads/<%= @squad["squad_id"] %>" method="POST" class="navbar-form navbar-fixed-bottom">
  <input type="hidden" name="_method" value="DELETE"><hr><input type="submit" value="DELETE" class="btn btn-danger del">
</form>
</footer> 


<%= erb :'partials/_footer' %>