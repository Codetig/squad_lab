  <input type="hidden" name="_method" value="PUT">
  <label for="name">Name:</label> <input type="text" name="name" id="name" value="<%= @squad["name"] %>">
  <label for="mascot">Mascot:</label> <input type="text" name="mascot" id="mascot" value="<%= @squad["mascot"] %>">
  <input type="submit" value="Update Squad">
</form>
<form action="/squads/<%= @squad["squad_id"] %>" method="POST">
  <input type="hidden" name="_method" value="DELETE"><input type="submit" value="DELETE">
